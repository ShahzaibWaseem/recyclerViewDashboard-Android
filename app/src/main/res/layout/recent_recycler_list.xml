<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="100dp"
    android:background="@drawable/rounded_box"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:elevation="10dp">
    
    <ImageView
        android:id="@+id/recentValueIcon"
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <TextView
        android:id="@+id/recentValueText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recentValueIcon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/recentTag"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/recentValueIcon"
        app:layout_constraintStart_toStartOf="@+id/recentValueIcon"
        app:layout_constraintEnd_toEndOf="@+id/recentValueText"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>